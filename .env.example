# Helius API
HELIUS_API_KEY=
# Optional explicit URLs (auto-derived from API key if omitted)
# HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# HELIUS_WS_URL=wss://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Wallet secret key (JSON array from solana-keygen, or base58/base64 string)
SOLANA_PRIVATE_KEY=

# Bot params
MAX_SLIPPAGE_BPS=1000
TP_PCT=0.35
SL_PCT=-0.2
PRIORITY_FEE_SOL=0.01
SKIP_PREFLIGHT=true

# Logging
LOG_FILE=bot.log.json

# Detection tuning
# DETECTION_MODE can be: auto | ws | poll
DETECTION_MODE=auto
# Poll interval in ms (used in poll or when WS unavailable)
POLL_INTERVAL_MS=1000

# Runtime controls
TRACKER_ENABLED=true
SELL_ENABLED=true

# Limit runtime for quick checks (seconds). Omit for continuous run.
# RUN_FOR_SECONDS=5

# Grace period after buy before checking TP/SL (ms)
MIN_HOLD_MS=2000

# Trailing stop in basis points (e.g., 3000 = 30%)
TRAILING_SL_BPS=3000

# Sell strategy: 'fixed' (TP/SL) or 'trailing'
SELL_STRATEGY=fixed
